<div class="ui grid">
  <div class="three wide column">
    <div class="ui violet vertical pointing menu">
      <a class="item active" {{action "home"}}>
        <i class="large home icon"></i>
        Home
      </a>
      <a class="item" {{action "studentsDataEntry"}}>
        <i class="large leanpub icon"></i>
        Students Records
      </a>

  <a class="item" {{action "settings"}}>
        <i class="large configure icon"></i>
          Settings
      </a>

      <a class="item " {{action "help"}}>
        <i class="large help icon"></i>
        Help
      </a>


    </div>
  </div>
  <div class="thirteen wide column ">
    <div class="ui segment container">
      {{#if isHomeShowing}}
        {{welcome-page}}
      {{/if}}
      {{#if isStudentsRecordsDataEntry}}
        {{student-data-entry}}
      {{/if}}
      {{#if isAboutShowing}}
        {{about-us}}
      {{/if}}
      {{#if isHelpShowing}}
        {{help-info}}
      {{/if}}
        
       {{#if isSettingsShowing}}
        {{select-code}}

      {{/if}}
      {{#if isUploading}}
        <input type='file' id='file-field'/>
        <button class="ui button" {{action "submitUpload"}}>Upload</button>
      {{/if}}
    </div>
  </div>
</div>