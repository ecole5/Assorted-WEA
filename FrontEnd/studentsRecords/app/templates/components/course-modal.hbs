<!-- This is the template for name-code, it is a modal that has a varying number of editable,
field. Each field has a delete buttton. Fields are populated with code names. There is an add button
to add a new field -->

<div class="ui modal">
  <div class="header">University Courses</div>
  <div class="content">
    <div class="ui grid">
      <div class="fifteen wide column">
        <div class="actions">
          <div class="ui form">

              <div class="five fields">
                <div class="field">
                     <div class="ui label">
                  Letter
                </div>
                </div>
                <div class="field">
                     <div class="ui label">
                  Number
                </div>
                </div>
                <div class="field">
                     <div class="ui label">
                  Name
                </div>
                </div>
                <div class="field">
                     <div class="ui label">
                  Unit
                </div>
                </div>
              </div>




              <!--Editing option for each name -->
              {{#each codeModel as |codeChoice|}}
              <div class="five fields">

                <!--On select will set target model context, but onblur will pass the value of the field -->
                <div class="field">
                  <div class="ui input">
                    <input type="text" value={{codeChoice.courseLetter}} onfocus={{action 'setCurrentModel' codeChoice}} onblur={{action
                      'editLetter' value="target.value" }}>
                  </div>
                </div>

                <!--On select will set target model context, but onblur will pass the value of the field -->
                <div class="field">
                  <div class="ui input">

                    <input type="text" value={{codeChoice.courseNumber}} onfocus={{action 'setCurrentModel' codeChoice}} onblur={{action
                      'editNumber' value="target.value" }}>
                  </div>
                </div>
                <!--On select will set target model context, but onblur will pass the value of the field -->
                <div class="field">
                  <div class="ui input">

                    <input type="text" value={{codeChoice.name}} onfocus={{action 'setCurrentModel' codeChoice}} onblur={{action 'editName'
                      value="target.value" }}>
                  </div>
                </div>
                <!--On select will set target model context, but onblur will pass the value of the field -->
                <div class="field">
                  <div class="ui input">

                    <input type="text" value={{codeChoice.unit}} onfocus={{action 'setCurrentModel' codeChoice}} onblur={{action 'editUnit'
                      value="target.value" }}>
                  </div>
                </div>

                <!--Remove Button -->
                <div class="field">
                  <button class="ui icon button" {{action 'removeCode' codeChoice }}>
                <i class="remove circle icon"></i>
                </button>
                </div>


                <!-- end of list element !-->
              </div>
              {{/each}}

              <!-- end of entire list!-->

              <!-- Add button !-->
              <button class="ui button" {{action 'newCode'}}>
     <i class="plus icon"></i>
  </button>

          
          </div>
        </div>
      </div>
      <div class="six wide column">
      </div>
    </div>

    <div class="actions">
      <br>
      <hr>
      <!-- Close Button !-->
      <div class="ui button" {{action "exit"}}>Ok</div>
    </div>

  </div>
</div>