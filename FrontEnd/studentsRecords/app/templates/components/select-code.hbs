    <!--Outlets for the modals where editing actually takes place-->
{{#if showGender}} {{name-code-modal notDONE = showGender title = "Gender Names" modelName = "gender"}} {{/if}}
{{#if showResidency}} {{name-code-modal notDONE = showResidency title = "Residency Names" modelName = "residency"}} {{/if}}
{{#if showTermCode}} {{name-code-modal notDONE = showTermCode title = "Term Code Names" modelName = "term"}} {{/if}}
{{#if showPlanCode}} {{name-code-modal notDONE = showPlanCode title = "Plan Code Names" modelName = "plan"}} {{/if}}
{{#if showSecondary}} {{name-code-modal notDONE = showSecondary title = "Seconday School Names" modelName = "secondaryschool"}} {{/if}}
{{#if showHsSubjects}} {{hssubject-modal notDONE = showHsSubjects}} {{/if}}
{{#if showCourseCode}} {{course-modal notDONE = showCourseCode}} {{/if}}