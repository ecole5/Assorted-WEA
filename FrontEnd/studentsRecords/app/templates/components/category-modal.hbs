<div class="ui modal">
  <div class="header">Configure Category</div>
  <div class="content">
    <div class="ui grid">
      <div class="fifteen wide column">
        <div class="actions">
          <div class="ui form">

              <h4 class="ui dividing header">Properties</h4>

              <div class="three fields">
                <div class="field">
                     <div class="ui label">
                  Name
                </div>
                </div>
                <div class="field">
                     <div class="ui label">
                  Evaluation Style
                </div>
                </div>
                <div class="field">
                     <div class="ui label">
                  Evaluate Independetly
                </div>
                </div>
              
              </div>

              <div class="three fields">

              
                    <div class="field">
                  <div class="ui input">

                    <input type="text" value={{categoryModel.name}} onblur={{action
                      'editName' value="target.value" }}>
                  </div>
                </div>
                 
            <div class="field">
                <select class="ui dropdown" onchange={{action 'selectStyle' value="target.value" }}>
                  <option value = 'true' selected={{eq categoryModel.allRules true}}>Every Rule True</option>
                   <option value = 'false' selected={{eq categoryModel.allRules false}}>One Rule True</option>
                  </select>
              </div>
                    <div class="field">
                <select class="ui dropdown" onchange={{action 'selectIndependent' value="target.value" }}>
                   <option value = 'false' selected={{eq categoryModel.independent false}}>Evaluate Against Others</option>
                  <option value = 'true' selected={{eq categoryModel.independent true}}>Evaluate Alone</option>
                  
                  </select>
              </div>

              
              </div>

        <h4 class="ui dividing header">Comments</h4>
      
           
          
            {{#each categoryModel.comment as |oneCatComment|}}
              
            
            <div class = "two fields">
              <div class = "field">
            {{oneCatComment.comment.code}}
            : {{oneCatComment.comment.description}}
        </div>
        <div class = "field">
               <button class="mini ui button" {{action 'remove' oneCatComment}}>
            <i class="remove circle icon"></i>
            </button>

          </div>
            
            </div>
            {{/each}}
           


          <div class = "field">
              <!-- Add button !-->
              <button class="ui button" {{action 'newComment'}}>
            <i class="plus icon"></i>
            </button>
            </div>
            
            {{#if selectingComment}}

            <div class = "fields">
              <div class = "field">
                
              <select class="ui dropdown" onchange={{action 'setComment' value="target.value" }}>
                  <option value = "null" > Select Code </option>
                  {{#each commentModel as |commentChoice|}}
                  <option value={{commentChoice.id}} >{{commentChoice.code}} </option>
                  {{/each}}
                  </select>
                </div>

                  <!-- Add button !-->
              <div class = "field">
              <button class="ui button" {{action 'saveComment'}}>
            <i class="save icon"></i>
            </button>
            </div>
            <div class = "field">
               <button class="ui button" {{action 'cancelComment'}}>
                  Cancel
            </button>
            </div>
            </div>
              {{/if}}

           

          
          </div>
        </div>
      </div>
      
    </div>

    <div class="actions">
      <br>
      <hr>
      <!-- Close Button !-->
      <div class="ui button" {{action "exit"}}>Ok</div>
    </div>

  </div>
</div>