<div class="ui four column grid">

  <div class="column">
  
      <div class="ui button" {{action "showGender"}}>
        Gender
    </div>
  </div>
  <!--end column-->
  
  <div class="column">
      <div class="ui button" {{action "showResidency"}}>
        Residency
    </div>
  </div>
  <!--end column-->
  


  <div class="column">
      <div class="ui button" {{action "showHsCourses"}}>
        High Schools Courses
    </div>
  </div>
  <!--end column-->

  <div class="column">
      <div class="ui button" {{action "showSecondary"}}>
       Secondary Schools
    </div>
  </div>
  <!--end column-->

  <div class="column">
      <div class="ui button" {{action "showHsSubjects"}}>
        High School Subjects
    </div>
  </div>
