 <!-- Ouda Auth START -->
 {{#if REP01IsPermitted }}
 <!-- Ouda Auth END -->

<div class="ui form">
  <div class="inline fields">
    <label>How do you want to sort the report?</label>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" name="type" onchange={{action 'setCrit' "Faculty"}}>
        <label>Faculty</label>
      </div>
    </div>
    <div class="field">
      <div class="ui radio checkbox">
        <input type="radio" name="type" onchange={{action 'setCrit' "Program"}}>
        <label>Program</label>
      </div>
    </div>
  </div>


  <div class="inline field">
    <label>Which Term do you want to create a report on?</label>
      <select onchange={{action 'setTerm' value="target.value"}}>
               <option value={{null}} selected={{eq critTerm
                                                                   null}}>Null </option>
              {{#each terms as |term|}}
                <option value={{term.name}} selected={{eq critTerm
                                                                   term.name}}>{{term.name}} </option>
              {{/each}}
              
              
      </select>



      
  </div>
     
      <div class="inline fields">
         <label>Term: {{critTerm}}</label> 
      </div>
      <div class="inline fields">
         <label> Sorted by: {{crit}}</label>
      </div>
      <div class="inline fields">
        <button class="ui button" {{action "getReport"}}>Get Reports</button>
      </div>
      <div class="inline fields">

      {{#if haveReport}}      
          <button class="ui button" {{action "displayReport"}}>
            Display Report as PDF
          </button>
          <button class="ui button" {{action "downloadReport"}}>
            Download Report
          </button>
          <label>The report will be downloaded as a .csv file. This file can be opened in Microsoft Excel</label>
      {{else}}
          <button class="ui disabled button">
            Display Report as PDF
          </button>
          <button class="ui disabled button">
            Download Report
          </button>
      {{/if}}
       </div>
     
      


</div>

<!-- Start Ouda auth -->
{{else}}
<div class="ui center aligned raised segment">
    <div class="ui icon header">
      <i class="protect icon"></i>
      Permission Denied
    </div>
    <div>
      <p>This feature (REP01) is not allowed for your account.</p>
      <p>Please contact the system administrator for more information.</p>
    </div>

  </div>

{{/if}}

<!-- End ouda auth -->