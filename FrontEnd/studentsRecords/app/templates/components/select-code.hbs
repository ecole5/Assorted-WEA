  <div class="column">
      <div class="ui button" {{action "showCourseCode"}}>
        University Courses
    </div>
  </div>
  <!--end column-->


  <div class="column">
      <div class="ui button " {{action "showPlanCode"}}>
       Plan Code
    </div>
  </div>
  <!--end column-->


